<?xml version="1.0" encoding="utf-8"?>
<com.app.calendarview.hor.CalendarDayRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calendar_day_rl"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:layout_marginBottom="5dp"
    android:gravity="center">

    <com.app.calendarview.hor.CalendarDayTextView
        android:id="@+id/calendar_day_tv"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="31"
        android:textColor="@color/text_color"
        android:textSize="18sp" />

    <View
        android:layout_alignParentBottom="true"
        android:id="@+id/calendar_day_v"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1dp"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:visibility="visible"
        android:background="@drawable/round_today"/>

</com.app.calendarview.hor.CalendarDayRelativeLayout>
